#
# Base configuration
#
# Syntax: set <option> = <value>
set author-width = 12
set show-author = abbreviated
set show-date = short
set show-rev-graph = yes
set show-refs = yes
set show-notes = yes
set show-changes = yes
set line-graphics = utf8
#set read-git-colors = yes
set show-line-numbers = no
set line-number-interval = 5
set horizontal-scroll = 33%
set split-view-height = 85%
set tab-size = 4
set status-untracked-dirs = yes

#
# Key configuration
#
# Syntax: bind <keymap> <key> <request>

bind generic F !git fetch
bind generic C !git checkout %(commit)

